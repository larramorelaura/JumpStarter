
@model LoginUser

<div class="text-backgrounds">
    <h1>Login</h1>
    <form asp-action="Login" method="post">
        <div class="mb-3 d-flex justify-content-between">
            <label asp-for="LoginEmail"></label>
            <input asp-for="LoginEmail">
        </div>
        <span asp-validation-for="LoginEmail" class="text-danger"></span>
        <div class="mb-3 d-flex justify-content-between">
            <label asp-for="LoginPassword"></label>
            <input asp-for="LoginPassword">
        </div>
        <span asp-validation-for="LoginPassword" class="text-danger"></span>
        <input class="bg-success text-white" type="submit" value="Login">
    </form>
</div>